ENV ALLOW_HTTP=no

ENV HOME_POLLING_INTERVAL=5000
ENV FOREIGN_POLLING_INTERVAL=5000

ENV CONSENSUS_ADDRESS=0x3014ca10b91cb3D0AD85fEf7A3Cb95BCAc9c0f79
