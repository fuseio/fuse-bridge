{
	"version": 1,
	"production": true,
	"title": "Native To ERC20 Bridge controls",
	"description": "View and update Bridge parameters",
	"constants":{
		"contractAddress" : {
			"default" : "0x3014ca10b91cb3D0AD85fEf7A3Cb95BCAc9c0f79",
			"1" : "0x3014ca10b91cb3D0AD85fEf7A3Cb95BCAc9c0f79",
			"122" : "0xd617774b9708F79187Dc7F03D3Bdce0a623F6988"
		}
	},
	"image": {
		"url": "https://upload.wikimedia.org/wikipedia/commons/9/98/Solidity_logo.svg"
	},
	"aboutUrl": "https://github.com/fuseio/fuse-bridge/issues/42",
	"panels": [
		{
			"id": "get-gas-price",
			"title": "Get the current Gas price",
			"execs": [{
				"type": "call",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "gasPrice",
				"saveResultAsInput": "GasPrice"
			}],
			"outputs": [{
				"title": "Gas Price",
				"type": "int",
				"scale": "-9",
				"unit": "gwei",
				"value": "@input[GasPrice]"
			}]
		},

		{
			"id": "set-gas-price",
			"title": "Update Gas Price",
			"inputs": [{
					"name": "_gasPrice",
					"title": "new gas price",
					"type": "int",
					"scale" : "9",
					"unit" : "gwei"
				}
			],
			"execs": [{
				"type": "send",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "setGasPrice",
				"args": {
					"_gasPrice": "@input[_gasPrice]"
				}
			}]
		},

		{
			"id": "get-daily-limit",
			"title": "Get the daily limit",
			"execs": [{
				"type": "call",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "dailyLimit",
				"saveResultAsInput": "DailyLimit"
			}],
			"outputs": [{
				"title": "Daily Limit",
				"type": "int",
				"scale" : "-9",
				"unit" : "gwei",
				"value": "@input[DailyLimit]"
			}]
		},
		{
			"id": "set-daily-limit",
			"title": "Update Daily Limit",
			"inputs": [{
					"name": "_dailyLimit",
					"title": "new daily limit",
					"type": "int",
					"unit" : "gwei",
					"scale": "9"
				}
			],
			"execs": [{
				"type": "send",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "setDailyLimit",
				"args": {
					"_dailyLimit": "@input[_dailyLimit]"
				}
			}]
		},

		{
			"id": "check-withinLimit",
			"title": "Check withinLimit",
			"inputs": [{
				"name": "_amount",
				"title": "Amount",
				"type": "int",
				"unit" : "gwei",
				"scale" : "9"
			}],
			"execs": [{
					"type": "call",
					"contract": "BasicBridge",
					"address": "@constant[contractAddress]",
					"method": "withinLimit",
					"args": {
						"_amount": "@input[_amount]"
					},
					"saveResultAsInput": "WithinLimit"
				}
			],
			"outputs": [{
					"title": "Within Limit",
					"type": "bool",
					"value": "@input[WithinLimit]"
				}
			]
		},

		{
			"id": "check-withinExecutionLimit",
			"title": "Check withinExecutionLimit",
			"inputs": [{
					"name": "_amount",
					"title": "Amount",
					"type": "int",
					"unit" : "gwei",
					"scale" : "9"
				}
			],
			"execs": [{
					"type": "call",
					"contract": "BasicBridge",
					"address": "@constant[contractAddress]",
					"method": "withinExecutionLimit",
					"args": {
						"_amount": "@input[_amount]"
					},
					"saveResultAsInput": "WithinExecutionLimit"
				}
			],
			"outputs": [{
					"title": "Within Execution Limit",
					"type": "bool",
					"value": "@input[WithinExecutionLimit]"
				}
			]
		},

		{
			"id": "get-execution-limits",
			"title": "View Execution Limits",
			"execs": [{
				"type": "call",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "executionDailyLimit",
				"saveResultAsInput": "ExecutionDailyLimit"
			}, {
				"type": "call",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "executionMaxPerTx",
				"saveResultAsInput": "ExecutionMaxPerTx"
			}],
			"outputs": [{
				"title": "Execution Daily Limit",
				"type": "int",
				"unit" : "gwei",
				"scale" : "-9",
				"value": "@input[ExecutionDailyLimit]"
			}, {
				"title": "Execution MaxPerTx",
				"type": "int",
				"unit" : "gwei",
				"scale" : "-9",
				"value": "@input[ExecutionMaxPerTx]"
			}]
		},

		{
			"id": "set-execution-daily-limit",
			"title": "Update execution Daily Limit",
			"inputs": [{
				"name": "_dailyLimit",
				"title": "New Execution Daily Limit",
				"type": "int",
				"unit" : "gwei",
				"scale": "9"
			}],
			"execs": [{
				"type": "send",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "setExecutionDailyLimit",
				"args": {
					"_dailyLimit": "@input[_dailyLimit]"
				}
			}]
		},

		{
			"id": "view-min-max",
			"title": "View Min/Max perTx",
			"execs": [{
				"type": "call",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "minPerTx",
				"saveResultAsInput": "MinPerTx"
			}, {
				"type": "call",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "maxPerTx",
				"saveResultAsInput": "MaxPerTx"
			}],
			"outputs": [{
				"title": "minPerTx",
				"type": "int",
				"unit" : "gwei",
				"scale" : "-9",
				"value": "@input[MinPerTx]"
			}, {
				"title": "maxPerTx",
				"type": "int",
				"unit" : "gwei",
				"scale" : "-9",
				"value": "@input[MaxPerTx]"
			}]
		},

		{
			"id": "set-minPerTx",
			"title": "Update MinPerTx",
			"inputs": [{
				"name": "_minPerTx",
				"title": "New MinPerTx",
				"type": "int",
				"unit" : "gwei",
				"scale" : "9"
			}],
			"execs": [{
				"type": "send",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "setMinPerTx",
				"args": {
					"_minPerTx": "@input[_minPerTx]"
				}
			}]
		},

		{
			"id": "set-maxPerTx",
			"title": "Update MaxPerTx",
			"inputs": [{
				"name": "_maxPerTx",
				"title": "New MaxPerTx",
				"type": "int",
				"unit" : "gwei",
				"scale" : "9"

			}],
			"execs": [{
				"type": "send",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "setMaxPerTx",
				"args": {
					"_maxPerTx": "@input[_maxPerTx]"
				}
			}]
		},

		{
			"id": "get-owner",
			"title": "Get the contract owner's address",
			"execs": [{
				"type": "call",
				"contract": "EternalOwnable",
				"address": "@constant[contractAddress]",
				"method": "owner",
				"saveResultAsInput": "ownerAddress"
			}],
			"outputs": [{
				"title": "Owner's address",
				"type": "address",
				"value": "@input[ownerAddress]"
			}]
		}
	]
}
